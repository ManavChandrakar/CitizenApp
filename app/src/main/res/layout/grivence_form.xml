<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dfdfdf"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/include" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name *"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Full Name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email *"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"

                />



            <EditText

                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter MailId"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile *"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"

                />



            <EditText

                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:maxLength="10"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Mobil No."/>


            <TextView
                android:id="@+id/clickcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grevience Category"
                android:textSize="20sp"
                android:drawableRight="@drawable/ic_arrow_down"
                android:textColor="@color/appcolor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/category"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:hint="Category"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="20dp"
                />


            <TextView
                android:id="@+id/clicksubcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grevience SubCategory"
                android:textSize="20sp"
                android:drawableRight="@drawable/ic_arrow_down"
                android:textColor="@color/appcolor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/subcat"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:hint="Category"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grievance Detail"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/editdetails"
                style="@style/textinputlayoutedittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="fnihfiefiefhehiihfiehnfiehfifnhfeififieiefeihfneieiefi"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Grievance Details"/>

         <!--   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grievance Location"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />


            <EditText
                android:id="@+id/location"
                style="@style/textinputlayoutedittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="fnihfiefiefhehiihfiehnfiehfifnhfeififieiefeihfneieiefi"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:editable="false"
                android:layout_marginRight="10dp"
                android:hint="Mobile Number/Aadhar Number"/>-->



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Landmark(if any)"
            android:textSize="20sp"
            android:textColor="@color/appcolor"
            android:layout_margin="10dp"
            />

            <EditText
                android:id="@+id/landmark"
                style="@style/textinputlayoutedittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="fnihfiefiefhehiihfiehnfiehfifnhfeififieiefeihfneieiefi"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Landmarks"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:background="@color/appcolor"
        android:text="SUBMIT"
        android:textColor="#ffffff"
        />
    </RelativeLayout>
