<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/card_view2"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llcomplete"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Application Id :"
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/aid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:textSize="16sp"
                android:layout_weight="6"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Applied By :"
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:id="@+id/reported"
                android:layout_weight="6"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Door no."
                android:layout_weight="4"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:textSize="16sp"
                android:layout_weight="6"
                android:id="@+id/dno"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Assessment No."
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:id="@+id/assessment_no"
                android:layout_weight="6"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Connections"
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:layout_weight="6"
                android:id="@+id/connections"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Connection Fee."
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:layout_weight="6"
                android:id="@+id/connection_fee"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Transaction id"
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:id="@+id/t_id"
                android:layout_weight="6"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Transaction on"
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Transaction "
                android:id="@+id/t_date"
                android:layout_weight="6"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Applied on:"
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:id="@+id/reportedon"
                android:layout_weight="6"
                android:textSize="16sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textSize="16sp"
                android:layout_weight="4"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:id="@+id/status"
                android:textSize="16sp"
                android:layout_weight="6"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:id="@+id/btnpay"
            android:textColor="#ffffff"
            android:background="@color/appcolor"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>