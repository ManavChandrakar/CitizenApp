<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"

    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/top_layout"
            android:padding="4dp"
            android:background="@color/appcolor">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HID"
                    android:id="@+id/hid_txt"
                    android:textColor="#eee"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20150948225"
                    android:id="@+id/hid"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment No"
                    android:id="@+id/assessment_txt"
                    android:textColor="#eee"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222"
                    android:id="@+id/assessment"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_layout"
            android:layout_centerHorizontal="true"

            android:background="#fff"
            android:layout_marginBottom="2dp"
            android:id="@+id/body_layout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:padding="4dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Citizen Name"
                    android:id="@+id/citizen"
                    android:maxLines="2"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/appcolor"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S/W/o Father Name"
                    android:maxLines="2"
                    android:id="@+id/father_name"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#111"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mandal"
                    android:id="@+id/mandal_txt"
                    android:paddingTop="4dp"
                    android:paddingBottom="0dp"
                    android:textColor="#444"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mymandal"
                    android:id="@+id/pptmandal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    android:textColor="#222" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panchayat"
                    android:id="@+id/panchayat_txt"
                    android:paddingTop="4dp"
                    android:paddingBottom="0dp"
                    android:textColor="#444"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mypanchayat"
                    android:id="@+id/pptpanchayat"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aadhar"
                    android:id="@+id/aadhar_txt"
                    android:paddingTop="4dp"
                    android:paddingBottom="0dp"
                    android:textColor="#444"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="989878784545"
                    android:id="@+id/aadhar"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imvadd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_link"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attached to the property list"
                    android:layout_gravity="center"
                    android:id="@+id/add"
                    android:textColor="#222" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>