<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/activity_payment_success"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/success_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff72c342"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_tick_round"
                android:gravity="center"
                android:paddingBottom="10.0dip"
                android:paddingTop="20.0dip" />

            <TextView
                android:id="@+id/success_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:gravity="center"
                android:maxLines="2"
                android:text="Payment is Successful!\n Payment Transaction ID: #12312312"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success_bg"
            android:background="#ffffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip">

                <TextView
                    android:id="@+id/transaction_txt"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="2.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Payment ID"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/transaction"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:maxLines="2"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Value"
                    android:textColor="@color/appcolor"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip">

                <TextView
                    android:id="@+id/bank_transaction_txt"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="2.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Bank Transaction ID"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/bank_transaction"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:maxLines="2"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Value"
                    android:textColor="@color/appcolor"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip">

                <TextView
                    android:id="@+id/amount_txt"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="2.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Billing Amount"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:maxLines="2"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Value"
                    android:textColor="@color/appcolor"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/duelist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip">

                <TextView
                    android:id="@+id/billing_name_txt"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="2.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Billing Name"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/billing_name"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:maxLines="2"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Value"
                    android:textColor="@color/appcolor"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/billing_email_txt"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="2.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Billing Email"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/billing_email"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:maxLines="2"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip">

                <TextView
                    android:id="@+id/billing_mobile_txt"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="2.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Billing Mobile"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/billing_mobile"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Value"
                    android:textColor="@color/appcolor"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip">

                <TextView
                    android:id="@+id/billing_purpose_txt"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="2.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Payment Towards"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/billing_purpose"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:maxLines="4"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="4.0dip"
                    android:text="Value"
                    android:textColor="@color/appcolor"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_back"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16.0dip"
                android:background="@color/colorAccent"
                android:paddingBottom="2.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="2.0dip"
                android:text="Go To Home"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>