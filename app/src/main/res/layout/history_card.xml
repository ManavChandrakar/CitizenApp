<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view2"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/top_layout"
            android:padding="4dp"
            android:background="@color/appcolor">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill No"
                    android:id="@+id/issue_id_txt"
                    android:textColor="#eee"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20150948225"
                    android:id="@+id/issue_id"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment"
                    android:id="@+id/category_txt"
                    android:textColor="#eee"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222"
                    android:id="@+id/category"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_layout"
            android:layout_centerHorizontal="true"

            android:background="#fff"
            android:layout_marginBottom="2dp"
            android:id="@+id/body_layout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:padding="4dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Citizen name"
                    android:id="@+id/title"
                    android:maxLines="2"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/appcolor"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tax Type"
                    android:maxLines="2"
                    android:id="@+id/sub_category"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:textColor="#111"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paid on 12 Jan 2017, 12:33 am"

                    android:id="@+id/timestamp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#666"
                    android:textSize="12sp" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:id="@+id/due_year"
                        android:text="2015-16"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="2dp"
                        android:gravity="center_horizontal"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/due_amount"
                        android:text="0.00/-"
                        android:drawableLeft="@drawable/ic_rupee"

                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="2dp"
                        android:gravity="center_horizontal"
                        />

                </LinearLayout>



            </LinearLayout>




        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>