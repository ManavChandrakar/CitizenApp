<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"

        >


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:id="@+id/map" tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_height="180dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/map"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:id="@+id/location_txt"
                    android:textSize="12sp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/location"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:paddingTop="2dp"
                    android:layout_weight="1"
                    android:paddingBottom="2dp"
                    android:gravity="left" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GPS Coordinates"
                    android:id="@+id/gps_location"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/gps"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" android:layout_weight="1"
                    android:gravity="left" />

            </LinearLayout>


           <!-- <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Enrollment"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/datetxt"
                    android:textSize="12sp"  android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"  android:layout_weight="1"
                    android:gravity="left" />


            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/assessment"

                android:hint="Assessment No."
                android:textColor="#333"
                android:gravity="top|left"
                android:inputType="number" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/blockno"

                android:hint="Block No."
                android:textColor="#333"
                android:gravity="top|left"
                android:inputType="number" />-->

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name *"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Full Name"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email *"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"

                />



            <EditText

                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:inputType="number"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Mailid"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile *"
                android:textSize="20sp"
                android:singleLine="true"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"

                />



            <EditText

                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="10"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Mobile No."/>
            
            <View
                android:id="@+id/vw"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="15dp"/>


            <TextView
                android:id="@+id/clickcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grevience Category"
                android:textSize="20sp"
                android:drawableRight="@drawable/ic_arrow_down"
                android:textColor="@color/appcolor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/category"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:hint="Category"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="20dp"
                />


            <TextView
                android:id="@+id/clicksubcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grevience SubCategory"
                android:textSize="20sp"
                android:drawableRight="@drawable/ic_arrow_down"
                android:textColor="@color/appcolor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/subcat"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:hint="SubCategory"
                android:background="@drawable/edittext_bg"
                android:drawablePadding="20dp"
                />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grievance Detail"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/editdetails"
                style="@style/textinputlayoutedittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:paddingLeft="0dp"
                android:layout_marginRight="10dp"
                android:hint="Grievance Details"/>

            <!--   <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Grievance Location"
