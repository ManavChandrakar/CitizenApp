<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

  <include layout="@layout/toolbar_layout"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Full Name"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"

                />



            <EditText

                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Mailid"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"

                />

            <EditText

                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="10"
                android:inputType="number"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Mobile No."/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S/W/D/O"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"

                />

            <EditText
                android:id="@+id/father_husband"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Father/Husband name"/>




            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Residence/Permanent Address"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/editdetails"
                style="@style/textinputlayoutedittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dfdfdf"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Address"/>

            <!--   <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Grievance Location"
                   android:textSize="20sp"
                   android:textColor="@color/appcolor"
                   android:layout_margin="10dp"
                   />


               <EditText
                   android:id="@+id/location"
                   style="@style/textinputlayoutedittext_style"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="#333333"
                   android:text="fnihfiefiefhehiihfiehnfiehfifnhfeififieiefeihfneieiefi"
                   android:background="#ffffff"
                   android:layout_marginLeft="10dp"
                   android:editable="false"
                   android:layout_marginRight="10dp"
                   android:hint="Mobile Number/Aadhar Number"/>-->



            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information Required"
                android:textSize="20sp"
                android:textColor="@color/appcolor"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/landmark"
                style="@style/textinputlayoutedittext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dfdfdf"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Information"/>
        <CheckBox
            android:id="@+id/check1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/appcolor"
            android:layout_marginTop="10dp"
            android:text="I Confirm that i am Citizen of India and I am asking the Information as Citizen"/>

        <CheckBox
            android:id="@+id/check2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="I assure that I shall not allow / cause to use / pass / share / display / or circulate the information received in any case and under any circumstances, with any person or in any manner which would be detrimental to the Unity and Sovereignty or against the Interest of India."/>
       </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:background="@color/appcolor"
        android:text="SUBMIT"
        android:textColor="#ffffff"
        />
</RelativeLayout>
